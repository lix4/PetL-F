<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Title:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/title_edittext_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/title_text_view"
        android:layout_toRightOf="@+id/title_text_view"
        android:inputType="text"
        android:hint="Input title here" />

    <TextView
        android:id="@+id/breed_text_view"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_text_view"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Breed:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/breed_edittext_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title_edittext_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/breed_text_view"
        android:layout_toRightOf="@+id/breed_text_view"
        android:inputType="text"
        android:hint="Input breed here" />

    <TextView
        android:id="@+id/location_text_view"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/breed_text_view"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Location:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/location_edittext_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/breed_edittext_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/location_text_view"
        android:layout_toRightOf="@+id/location_text_view"
        android:inputType="text"
        android:hint="Input location here" />

    <TextView
        android:id="@+id/color_text_view"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/location_text_view"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Color"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/color_edittext_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/location_edittext_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/color_text_view"
        android:layout_toRightOf="@+id/color_text_view"
        android:inputType="text"
        android:hint="Input color here" />

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/color_text_view"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Time"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/time_edittext_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/color_edittext_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/time_text_view"
        android:layout_toRightOf="@+id/time_text_view"
        android:inputType="text"
        android:hint="Input time here" />

    <TextView
        android:id="@+id/size_text_view"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/time_text_view"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Size"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/size_edittext_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/time_edittext_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/size_text_view"
        android:layout_toRightOf="@+id/size_text_view"
        android:inputType="text"
        android:hint="Input size here" />

    <TextView
        android:id="@+id/otherinfo_text_view"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/size_text_view"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Other Info:"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/otherinfo_edittext_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/size_edittext_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/otherinfo_text_view"
        android:layout_toRightOf="@+id/otherinfo_text_view"
        android:inputType="text"
        android:hint="Input any other info here" />

    <TextView
        android:id="@+id/uploadimage_text_view"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/otherinfo_text_view"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Upload Images â†’ "
        android:textSize="24sp" />

    <Button
        android:id="@+id/uploadimage_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/uploadimage_text_view"
        android:layout_toEndOf="@+id/uploadimage_text_view"
        android:layout_toRightOf="@+id/uploadimage_text_view"
        android:text="Upload" />


</RelativeLayout>